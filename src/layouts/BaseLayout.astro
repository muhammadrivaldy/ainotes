---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "AI Notes - Your Second Brain",
  description = "Reduce cognitive load with AI Notes, a conversational knowledge base that stores and retrieves your thoughts naturally."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-white">
    <slot />
  </body>
</html>
