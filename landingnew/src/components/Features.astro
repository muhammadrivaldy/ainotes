---
import { Brain, Search, Database, Lock, Zap, RefreshCw } from 'lucide-react';

const features = [
  {
    icon: Brain,
    title: "Semantic Understanding",
    description: "Store information using natural language. The AI understands context and meaning, not just keywords."
  },
  {
    icon: Search,
    title: "Vector Search",
    description: "Powered by OpenAI embeddings and ChromaDB to find relevant memories instantly."
  },
  {
    icon: RefreshCw,
    title: "Life Stream",
    description: "A continuous, infinite-scroll timeline of your thoughts and interactions."
  },
  {
    icon: Database,
    title: "Per-User Isolation",
    description: "Your data is yours alone. Complete isolation of vector collections and chat history."
  },
  {
    icon: Zap,
    title: "Smart Help",
    description: "The system detects when you're confused and proactively offers context-aware guidance."
  },
  {
    icon: Lock,
    title: "Secure Auth",
    description: "Enterprise-grade security with Google OAuth integration and JWT session management."
  }
];
---

<section id="features" class="py-32 relative bg-surface/30">
  <div class="max-w-7xl mx-auto px-6">
    <div class="mb-20">
      <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
        Intelligence, <span class="text-gray-500">Embedded.</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl font-light">
        A complete memory system that grows with you. Technical excellence meets intuitive design.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature) => (
        <div class="group p-8 rounded-3xl bg-white/5 border border-white/5 hover:bg-white/10 hover:border-white/20 transition-all duration-500 hover:-translate-y-1">
          <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-white/10 to-transparent border border-white/10 flex items-center justify-center mb-8 text-white group-hover:scale-110 group-hover:text-primary transition-all duration-500">
            <feature.icon size={28} strokeWidth={1.5} />
          </div>
          <h3 class="text-2xl font-display font-bold mb-4 text-gray-100 group-hover:text-white transition-colors">{feature.title}</h3>
          <p class="text-gray-400 leading-relaxed font-light group-hover:text-gray-300">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
