<section class="py-24 relative overflow-hidden bg-slate-900">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-20">
      <h2 data-i18n="benefits.title" class="text-4xl font-bold text-white sm:text-5xl tracking-tight">Perfect For</h2>
      <p data-i18n="benefits.subtitle" class="mt-4 text-xl text-slate-400">Whether you're at work or at home, AI Notes adapts to your needs</p>
    </div>

    <!-- Perfect For Cards -->
    <div class="grid md:grid-cols-3 gap-8 mb-32 items-stretch">
      <!-- Card 1 -->
      <div class="group relative bg-slate-900/50 backdrop-blur-xl rounded-3xl border border-white/10 p-1 transition-all duration-300 hover:-translate-y-2 hover:border-blue-500/50 hover:shadow-2xl hover:shadow-blue-500/20 h-full">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-600/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity rounded-3xl"></div>
        <div class="relative h-full bg-slate-950/50 rounded-[22px] p-8 overflow-hidden flex flex-col">
          <div class="absolute top-0 right-0 w-32 h-32 bg-blue-500/10 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2 group-hover:bg-blue-500/20 transition-colors"></div>
          
          <div class="relative z-10 flex flex-col flex-1 h-full">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500/20 to-blue-600/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300 border border-blue-500/20 group-hover:border-blue-500/40">
              <svg class="w-8 h-8 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            
            <h3 data-i18n="benefits.knowledgeWorkers.title" class="text-2xl font-bold text-white mb-6 group-hover:text-blue-300 transition-colors">Knowledge Workers</h3>
            
            <ul class="space-y-4 flex-1">
              <li class="flex items-start gap-3 text-slate-400 group-hover:text-slate-300 transition-colors">
                <div class="w-1.5 h-1.5 rounded-full bg-blue-500 mt-2.5 flex-shrink-0"></div>
                <span data-i18n="benefits.knowledgeWorkers.item0" class="text-sm">Store code snippets and technical notes</span>
              </li>
              <li class="flex items-start gap-3 text-slate-400 group-hover:text-slate-300 transition-colors">
                <div class="w-1.5 h-1.5 rounded-full bg-blue-500 mt-2.5 flex-shrink-0"></div>
                <span data-i18n="benefits.knowledgeWorkers.item1" class="text-sm">Remember meeting decisions</span>
              </li>
              <li class="flex items-start gap-3 text-slate-400 group-hover:text-slate-300 transition-colors">
                <div class="w-1.5 h-1.5 rounded-full bg-blue-500 mt-2.5 flex-shrink-0"></div>
                <span data-i18n="benefits.knowledgeWorkers.item2" class="text-sm">Track project requirements</span>
              </li>
              <li class="flex items-start gap-3 text-slate-400 group-hover:text-slate-300 transition-colors">
                <div class="w-1.5 h-1.5 rounded-full bg-blue-500 mt-2.5 flex-shrink-0"></div>
                <span data-i18n="benefits.knowledgeWorkers.item3" class="text-sm">Save commands and configs</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Card 2 (Standardized) -->
      <div class="group relative bg-slate-900/50 backdrop-blur-xl rounded-3xl border border-white/10 p-1 transition-all duration-300 hover:-translate-y-2 hover:border-purple-500/50 hover:shadow-2xl hover:shadow-purple-500/20 h-full">
        <div class="absolute inset-0 bg-gradient-to-br from-purple-600/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity rounded-3xl"></div>
        <div class="relative h-full bg-slate-950/50 rounded-[22px] p-8 overflow-hidden flex flex-col">
          <div class="absolute top-0 right-0 w-32 h-32 bg-purple-500/10 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2 group-hover:bg-purple-500/20 transition-colors"></div>
          
          <div class="relative z-10 flex flex-col flex-1 h-full">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500/20 to-purple-600/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300 border border-purple-500/20 group-hover:border-purple-500/40">
              <svg class="w-8 h-8 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
            </div>
            
            <h3 data-i18n="benefits.personalUse.title" class="text-2xl font-bold text-white mb-6 group-hover:text-purple-300 transition-colors">Personal Use</h3>
            
            <ul class="space-y-4 flex-1">
              <li class="flex items-start gap-3 text-slate-400 group-hover:text-slate-300 transition-colors">
                <div class="w-1.5 h-1.5 rounded-full bg-purple-500 mt-2.5 flex-shrink-0"></div>
                <span data-i18n="benefits.personalUse.item0" class="text-sm">Remember birthdays and dates</span>
              </li>
              <li class="flex items-start gap-3 text-slate-400 group-hover:text-slate-300 transition-colors">
                <div class="w-1.5 h-1.5 rounded-full bg-purple-500 mt-2.5 flex-shrink-0"></div>
                <span data-i18n="benefits.personalUse.item1" class="text-sm">Save recipes and book recs</span>
              </li>
              <li class="flex items-start gap-3 text-slate-400 group-hover:text-slate-300 transition-colors">
                <div class="w-1.5 h-1.5 rounded-full bg-purple-500 mt-2.5 flex-shrink-0"></div>
                <span data-i18n="benefits.personalUse.item2" class="text-sm">Store password hints</span>
              </li>
              <li class="flex items-start gap-3 text-slate-400 group-hover:text-slate-300 transition-colors">
                <div class="w-1.5 h-1.5 rounded-full bg-purple-500 mt-2.5 flex-shrink-0"></div>
                <span data-i18n="benefits.personalUse.item3" class="text-sm">Keep thoughts and ideas</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="group relative bg-slate-900/50 backdrop-blur-xl rounded-3xl border border-white/10 p-1 transition-all duration-300 hover:-translate-y-2 hover:border-green-500/50 hover:shadow-2xl hover:shadow-green-500/20 h-full">
        <div class="absolute inset-0 bg-gradient-to-br from-green-600/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity rounded-3xl"></div>
        <div class="relative h-full bg-slate-950/50 rounded-[22px] p-8 overflow-hidden flex flex-col">
          <div class="absolute top-0 right-0 w-32 h-32 bg-green-500/10 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2 group-hover:bg-green-500/20 transition-colors"></div>
          
          <div class="relative z-10 flex flex-col flex-1 h-full">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500/20 to-green-600/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300 border border-green-500/20 group-hover:border-green-500/40">
              <svg class="w-8 h-8 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
            </div>
            
            <h3 data-i18n="benefits.developers.title" class="text-2xl font-bold text-white mb-6 group-hover:text-green-300 transition-colors">Developers</h3>
            
            <ul class="space-y-4 flex-1">
              <li class="flex items-start gap-3 text-slate-400 group-hover:text-slate-300 transition-colors">
                <div class="w-1.5 h-1.5 rounded-full bg-green-500 mt-2.5 flex-shrink-0"></div>
                <span data-i18n="benefits.developers.item0" class="text-sm">Full control over your data</span>
              </li>
              <li class="flex items-start gap-3 text-slate-400 group-hover:text-slate-300 transition-colors">
                <div class="w-1.5 h-1.5 rounded-full bg-green-500 mt-2.5 flex-shrink-0"></div>
                <span data-i18n="benefits.developers.item1" class="text-sm">Deploy anywhere you want</span>
              </li>
              <li class="flex items-start gap-3 text-slate-400 group-hover:text-slate-300 transition-colors">
                <div class="w-1.5 h-1.5 rounded-full bg-green-500 mt-2.5 flex-shrink-0"></div>
                <span data-i18n="benefits.developers.item2" class="text-sm">Customize to your needs</span>
              </li>
              <li class="flex items-start gap-3 text-slate-400 group-hover:text-slate-300 transition-colors">
                <div class="w-1.5 h-1.5 rounded-full bg-green-500 mt-2.5 flex-shrink-0"></div>
                <span data-i18n="benefits.developers.item3" class="text-sm">Contribute to community</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    </div>
  </div>
</section>
