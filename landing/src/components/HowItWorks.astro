---
import { MessageSquare, Search, RefreshCw } from 'lucide-react';

const steps = [
  {
    icon: MessageSquare,
    title: "Tell It",
    description: "Say what you want to remember in plain language. No forms to fill, no categories to choose."
  },
  {
    icon: Search,
    title: "Ask It",
    description: "Retrieve information whenever you need it. Just ask naturally and AI Notes finds it instantly."
  },
  {
    icon: RefreshCw,
    title: "Update It",
    description: "Change or correct information anytime by simply telling AI Notes what to update."
  }
];
---

<section id="how-it-works" class="py-24 relative bg-black overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary/10 rounded-full blur-[100px]"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-secondary/10 rounded-full blur-[100px]"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 mb-6 backdrop-blur-sm">
        <span class="text-xs font-mono text-primary uppercase tracking-wider">Workflow</span>
      </div>
      <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
        Natural <span class="text-gradient">Flow</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto font-light">
        Simple, natural conversation. No complicated interfaces to learn.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {steps.map((step, index) => (
        <div class="relative group">
          <div class="absolute inset-0 bg-gradient-to-b from-white/5 to-transparent rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative p-8 rounded-3xl border border-white/5 bg-surface/30 backdrop-blur-sm hover:border-white/10 transition-colors h-full">
            <div class="absolute -top-6 left-8 w-12 h-12 rounded-xl bg-surface border border-white/10 flex items-center justify-center text-xl font-mono font-bold text-gray-600 group-hover:text-white group-hover:border-primary/50 transition-all duration-300 shadow-xl">
              {index + 1}
            </div>
            
            <div class="mt-8 mb-6 w-14 h-14 rounded-full bg-white/5 flex items-center justify-center text-gray-300 group-hover:text-primary group-hover:scale-110 transition-all duration-300">
              <step.icon size={28} strokeWidth={1.5} />
            </div>

            <h3 class="text-2xl font-display font-bold mb-4 group-hover:text-primary transition-colors">{step.title}</h3>
            <p class="text-gray-400 leading-relaxed font-light">
              {step.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
