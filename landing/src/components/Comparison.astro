---
import { Folder, Hash, Cloud, Lock, MessageSquare, Brain, Server, Github } from 'lucide-react';

const comparisons = [
  {
    category: "Organization",
    traditional: { icon: Folder, text: "Organize into folders" },
    ainotes: { icon: MessageSquare, text: "Just talk naturally" }
  },
  {
    category: "Context",
    traditional: { icon: Hash, text: "Remember to add tags" },
    ainotes: { icon: Brain, text: "AI understands context" }
  },
  {
    category: "Privacy",
    traditional: { icon: Cloud, text: "Data stored on servers" },
    ainotes: { icon: Server, text: "Self-host your data" }
  },
  {
    category: "Control",
    traditional: { icon: Lock, text: "Vendor lock-in" },
    ainotes: { icon: Github, text: "Open source" }
  }
];
---

<section class="py-24 relative bg-black border-t border-white/5">
  <div class="max-w-5xl mx-auto px-6">
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">The Difference</h2>
    </div>

    <div class="relative">
      <!-- Center Line (Desktop) -->
      <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-transparent via-white/10 to-transparent -translate-x-1/2"></div>

      <!-- Headers -->
      <div class="hidden md:grid grid-cols-2 gap-24 mb-12 text-lg font-bold font-display tracking-wide">
        <div class="text-right text-gray-500">Traditional Apps</div>
        <div class="text-left text-primary">AI Notes</div>
      </div>

      <div class="space-y-12">
        {comparisons.map((item) => (
          <div class="relative grid md:grid-cols-2 gap-6 md:gap-24 items-center group">
            
            <!-- Mobile Category Label -->
            <div class="md:hidden text-center mb-2">
              <span class="text-xs font-mono text-gray-500 uppercase tracking-widest">{item.category}</span>
            </div>

            <!-- Traditional -->
            <div class="text-center md:text-right p-6 md:p-0 rounded-2xl bg-white/5 md:bg-transparent border border-white/5 md:border-0">
              <div class="md:hidden text-xs font-bold text-gray-500 mb-2 uppercase">Traditional</div>
              <div class="flex items-center justify-center md:justify-end gap-3 text-gray-500 line-through decoration-gray-700">
                <span class="font-light">{item.traditional.text}</span>
                <item.traditional.icon size={20} className="hidden md:block opacity-50" />
              </div>
            </div>

            <!-- VS Icon (Center) -->
            <div class="hidden md:flex absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-8 h-8 rounded-full bg-black border border-white/10 items-center justify-center z-10 text-[10px] font-mono text-gray-600">
              VS
            </div>

            <!-- AI Notes -->
            <div class="text-center md:text-left p-6 md:p-0 rounded-2xl bg-primary/5 md:bg-transparent border border-primary/10 md:border-0">
              <div class="md:hidden text-xs font-bold text-primary mb-2 uppercase">AI Notes</div>
              <div class="flex items-center justify-center md:justify-start gap-3 text-white group-hover:text-primary transition-colors">
                <item.ainotes.icon size={20} className="hidden md:block" />
                <span class="font-medium text-lg">{item.ainotes.text}</span>
              </div>
            </div>

          </div>
        ))}
      </div>
    </div>
  </div>
</section>
