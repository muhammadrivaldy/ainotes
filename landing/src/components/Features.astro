---
import { Brain, Search, ShieldCheck, Code2 } from 'lucide-react';

const features = [
  {
    icon: Brain,
    title: "You forget important things",
    description: "How many times have you forgotten a password hint or a meeting detail? Tell it once, retrieve anytime.",
    color: "from-red-500/20 to-red-600/5",
    accent: "text-red-400",
    border: "group-hover:border-red-500/30"
  },
  {
    icon: Search,
    title: "Traditional apps are complicated",
    description: "Stop wasting time with folders and tags. AI Notes understands contextâ€”just ask and it finds what you need.",
    color: "from-orange-500/20 to-orange-600/5",
    accent: "text-orange-400",
    border: "group-hover:border-orange-500/30"
  },
  {
    icon: ShieldCheck,
    title: "Your data stays yours",
    description: "Self-host on your own server. No cloud dependency, no vendor lock-in. Your knowledge stays private.",
    color: "from-purple-500/20 to-purple-600/5",
    accent: "text-purple-400",
    border: "group-hover:border-purple-500/30"
  },
  {
    icon: Code2,
    title: "Fully customizable",
    description: "Open source means you can modify and extend AI Notes to your needs or contribute back to the community.",
    color: "from-emerald-500/20 to-emerald-600/5",
    accent: "text-emerald-400",
    border: "group-hover:border-emerald-500/30"
  }
];
---

<section id="features" class="py-24 relative bg-surface/30">
  <div class="max-w-7xl mx-auto px-6">
    <div class="mb-20 text-center md:text-left">
      <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
        Why You Need <span class="text-gray-500">AI Notes</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl font-light">
        Your brain is for thinking, not for storing. Let AI handle your memory.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      {features.map((feature) => (
        <div class={`group p-8 rounded-3xl bg-white/5 border border-white/5 hover:bg-white/10 ${feature.border} transition-all duration-300 hover:-translate-y-1`}>
          <div class="flex items-start gap-6">
            <div class={`flex-shrink-0 w-14 h-14 rounded-2xl bg-gradient-to-br ${feature.color} border border-white/5 flex items-center justify-center group-hover:scale-110 transition-transform duration-300`}>
              <feature.icon size={28} className={feature.accent} strokeWidth={1.5} />
            </div>
            
            <div>
              <h3 class="text-2xl font-display font-bold mb-3 text-gray-100 group-hover:text-white transition-colors">{feature.title}</h3>
              <p class="text-gray-400 leading-relaxed font-light group-hover:text-gray-300">
                {feature.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
